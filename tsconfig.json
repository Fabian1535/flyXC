{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "flyxc/*": [
        "*"
      ],
      "@vaadin/*": [
        "frontend/src/vaadin/*",
        "common/src/vaadin/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "frontend/node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "incremental": true
  },
  "exclude": [
    "app/server.js",
    "run/index.js",
    "airspaces/**/*",
    "fetcher/dist/**/*",
    "frontend/scripts/**/*",
    "frontend/static/**/*",
    "**/node_modules/**/*",
    "**/*.test.ts",
    ".rollup.cache/**/*"
  ]
}