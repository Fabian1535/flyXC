{
  "compilerOptions": {
    //"incremental": true ,
    // see https://lit-element.polymer-project.org/guide/publish
    "target": "es2017",
    "module": "esNext",
    "allowJs": true,
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    // "baseUrl": "./",                       
    // "paths": {},                           
    // "rootDirs": [],                        
    "typeRoots": [
      "node_modules/@types",
      "frontend/node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true
  }
}